<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_text">

    </View>

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main"
            style="@style/MainButtonStyle"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:drawableTop="@drawable/main_icon"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_invest"
            style="@style/MainButtonStyle"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/invest_icon"
            android:text="投资" />

        <RadioButton
            android:id="@+id/rb_propert"
            style="@style/MainButtonStyle"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/property_icon"
            android:text="资产" />

        <RadioButton
            android:id="@+id/rb_more"
            style="@style/MainButtonStyle"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/more_icon"
            android:text="更多" />
    </RadioGroup>


</LinearLayout>
